<h1>
    <%= title %>
</h1>

<%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
            <% errors.array().forEach(error=> { %>
                <li>
                    <%= error.msg %>
                </li>
                <% }) %>
        </ul>
        <% } %>

            <div id="welcome">
                <h2>Welcome <%= locals.accountData.account_firstname %>
                </h2>

                <button>
                    <a href="/account/update/<%= locals.accountData.account_id%>">Edit Account Information</a>
                </button>

                <% if(locals.accountData.account_type==="Employee" || locals.accountData.account_type==="Admin" ) { %>

                    <h3>Inventory Management</h3>
                    <button><a href="/inv/">Manage Inventory</a></button>

                    <% } %>
                        <% if(locals.accountData.account_type==='Admin' ) { %>

                            <h3>Manage Other Accounts</h3>
                            <button><a href="/account/editAccountType">Change Account Types</a></button>
                            <br>
                            <button><a href="/account/deleteAccount">Delete User Accounts</a></button>


                            <% } %>
            </div>