<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>
        <%- messages() %>

            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>


                    <div id="welcome">
                        <h2>Welcome <%= locals.accountData.account_firstname %>
                        </h2>
                        <p>You're logged in.</p>
                        <button><a href="/account/update/<%= locals.accountData.account_id%>">Edit Account
                                Information</a>
                        </button>


                        <% if(locals.accountData.account_type==="Employee" || locals.accountData.account_type==="Admin"
                            ) { %>

                            <h3>Inventory Management</h3>
                            <button><a href="/inv/">Manage Inventory</a></button>

                            <% } %>
                    </div>