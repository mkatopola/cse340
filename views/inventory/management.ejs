<%# Content Heading %>
    <% if (title) { %>
        <h1>
            <%= title %>
        </h1>
        <% } else { res.redirect('/') } %>

            <%- messages() %>

                <% if (errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>

                        <div id="management-form">
                            <div class="mgt-bttn">
                                <p>Click the button to add a New Classification</p>
                                <button>
                                    <a href="/inv/addClassification">Add New Classification</a>
                                </button>
                            </div>

                            <div class="mgt-bttn">
                                <p>Click the button to add a New Vehicle</p>
                                <button class="manage">
                                    <a href="/inv/addInventory">Add New Vehicle</a>
                                </button>
                            </div>
                            <div class="inv-mgt">
                                <h2>Manage Inventory</h2>
                                <p>Choose a classification to see those inventory items.</p>

                                <%- options %>

                                    <table id="inventoryDisplay"></table>
                            </div>

                            <noscript>JavaScript must be enabled to use this page.</noscript>

                            <script src="../../js/inventory.js"></script>
                        </div>