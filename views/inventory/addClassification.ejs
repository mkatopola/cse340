<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { %>
        <% res.redirect('/') %>
            <% } %>

                <%- messages() %>

                    <% if (errors) { %>
                        <ul class="notice" role="alert" aria-live="assertive">
                            <% errors.array().forEach(error=> { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>

                            <form id="add-classification" action="/inv/addClassification" method="post">
                                <fieldset>
                                    <div id="add-class">
                                        <p class="required-info">This is required.</p>
                                        <label for="classification_name">Classification Name</label>
                                        <input type="text" name="classification_name" id="classification_name"
                                            pattern="^[A-Za-z]+$"
                                            title="Alphabetic characters only, no spaces or special characters."
                                            required aria-describedby="instructions">

                                        <div class="instructions">
                                            <p>Name must contain alphabetic characters only (no spaces or special
                                                characters).</p>
                                        </div>

                                        <input type="submit" value="Add Now" class="submit-btn"
                                            aria-label="Submit new classification">
                                    </div>
                                </fieldset>
                            </form>